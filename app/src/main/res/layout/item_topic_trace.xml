<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="@dimen/dimen_60_dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#545454"
        android:textSize="@dimen/textSize_16"
        tools:text="12.26" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view_top_line"
            android:layout_width="@dimen/line_1"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/backgroundGrey" />

        <View
            android:layout_width="@dimen/dimen_5_dp"
            android:layout_height="@dimen/dimen_5_dp"
            android:background="@drawable/drawable_topic_trace_oval" />

        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="@dimen/line_1"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/backgroundGrey" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_time_line_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dp"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/dimen_5_dp"
        android:textColor="?attr/readhubTextCommonColor"
        android:textSize="@dimen/textSize_16"
        tools:text="与三星等竞争 高通获准在加州测试自动驾驶汽车" />
</LinearLayout>